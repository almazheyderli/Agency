﻿@using Agency.Core.Models;
@model Portfolio

<div class=" container">

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" id="exampleFormControlInput1" placeholder="Title">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description </label>
            <input asp-for="Description" id="exampleFormControlInput1" placeholder="Description">
            <span asp-validation-for="Description"></span>
        </div>
      
        <div class="form-group">
            <label asp-for="ImgFile">ImgUrl </label>
            <input asp-for="ImgFile" id="exampleFormControlInput1" placeholder="ImgFile">
            <span asp-validation-for="ImgFile"></span>
        </div>
        <div asp-validation-summary="All">
        </div>
        <button class="btn btn-primary">Submit</button>

    </form>


</div>